@model List<ResultCommentDto>
<div class="col-md-6">
	<h4 class="mb-4">@Model.Count yorum bulunmaktadır"</h4>
	@foreach (var item in Model)
	{
		<div class="media mb-4">
			<img src="img/user.jpg" alt="@item.ImageUrl" class="img-fluid mr-3 mt-1" style="width: 45px;">
			<div class="media-body">
				<h6>@item.NameSurname<small> - <i>@item.CreatedDate</i></small></h6>
				<div class="text-primary mb-2">
					@for (int i = 0; i < item.Rating; i++)
					{
						<i class="fas fa-star"></i>
					}
				</div>
				<p>@item.CommentDetail</p>
			</div>
		</div>
	}
</div>