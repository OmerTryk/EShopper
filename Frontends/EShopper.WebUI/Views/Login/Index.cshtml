@model UserLoginDto
@{
	ViewData["Title"] = "Giriş";
	Layout = "~/Views/AuthLayout/_AuthLayout.cshtml";
}

<section>
	<div class="page-header min-vh-75">
		<div class="container">
			<div class="row">
				<div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
					<div class="card card-plain mt-8">
						<div class="card-header pb-0 text-left bg-transparent">
							<p>@ViewBag.ErrorMessage</p>
							<h3 class="font-weight-bolder text-info text-gradient">Tekrar Hoş Geldiniz</h3>
							<p class="mb-0">Giriş yapmak için kullanıcı ve şifrenizi giriniz</p>
						</div>
						<div class="card-body">
							<form role="form" method="post">
								<label>Kullanıcı Adı</label>
								<div class="mb-3">
									<input asp-for="UserName" type="text" class="form-control" placeholder="Kullanıcı Adı" aria-label="UserName" aria-describedby="username-addon">
								</div>
								<label>Şifre</label>
								<div class="mb-3">
									<input asp-for="Password" type="password" class="form-control" placeholder="Şifre" aria-label="Şifre" aria-describedby="password-addon">
								</div>
								<div class="form-check form-switch">
									<input class="form-check-input" type="checkbox" id="rememberMe" checked="">
									<label class="form-check-label" for="rememberMe">Beni Hatırla</label>
								</div>
								<div class="text-center">
									<button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Giriş Yap</button>
								</div>
							</form>
						</div>
						<div class="card-footer text-center pt-0 px-lg-2 px-1">
							<p class="mb-4 text-sm mx-auto">
								Hesabınız yok mu?
								<a href="/Register/Index" class="text-info text-gradient font-weight-bold">Kayıt Ol</a>
							</p>
						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
						<div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6"
							 style="background-image:url('/soft-ui-dashboard-main/assets/img/curved-images/curved6.jpg')"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
