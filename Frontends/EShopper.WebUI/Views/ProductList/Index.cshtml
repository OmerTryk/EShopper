@{
	ViewData["Title"] = "Index";
	ViewData["PageName"] = "Product List";
	Layout = "~/Views/UILayout/_UILayout.cshtml";
}
<div class="container-fluid pt-5">
	<div class="row px-xl-5">
		<div class="col-lg-3 col-md-12">
			@await Component.InvokeAsync("_PriceFilterProductListComponentPartial")
			@await Component.InvokeAsync("_ColorFilterProductListComponentPartial")
			@await Component.InvokeAsync("_SizeFilterProductListComponentPartial")
		</div>
		<div class="col-lg-9 col-md-12">
			<div class="row pb-3">
				@await Component.InvokeAsync("_SearchAndSortProductListComponentPartial");
				@await Component.InvokeAsync("_ProductDetailsCardProductListComponentPartial", new { id = ViewBag.CategoryId })
				@await Component.InvokeAsync("_PaginationProductListComponentPartial")
			</div>
		</div>
	</div>
</div>
