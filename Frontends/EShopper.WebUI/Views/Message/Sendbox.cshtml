@model List<EShopper.DtoLayer.MessageDtos.ResultSendboxMessageDto>
@{
    ViewData["Title"] = "Gönderilenler";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container mt-4">
    <h3 class="mb-3">📤 Gönderilenler</h3>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Kime</th>
                    <th>Konu</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.ReceiverId</td>
                        <td>@msg.Subject</td>
                        <td>@msg.MessageDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (msg.IsRead)
                            {
                                <span class="badge bg-info">Alıcı Okudu</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Bekliyor</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
