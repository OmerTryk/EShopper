@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Kategori Tablosu</h6>
                </div>

                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-uppercase text-secondary font-weight-bolder opacity-7">#</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Kategori Adı</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kategoriye Ait Ürünler</th>
                                    <th class="text-secondary opacity-7"></th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-success">@count</span>
                                            </td>

                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="~/soft-ui-dashboard-main/assets/img/team-2.jpg"
                                                             class="avatar avatar-sm me-3"
                                                             alt="category">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@item.CategoryName</h6>
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="align-middle">
                                                <a href="javascript:;"
                                                   class="text-secondary font-weight-bold text-xs"
                                                   data-toggle="tooltip"
                                                   title="Ürünlere Git">
                                                    Ürünlere Git
                                                </a>
                                            </td>

                                            <td class="align-middle">
                                                <a href="/Admin/Category/DeleteCategory/@item.CategoryId"
                                                   class="text-secondary font-weight-bold text-xs"
                                                   data-toggle="tooltip"
                                                   title="Sil">
                                                    Sil
                                                </a>
                                            </td>

                                            <td class="align-middle">
                                                <a href="/Admin/Category/UpdateCategory/@item.CategoryId"
                                                   class="text-secondary font-weight-bold text-xs"
                                                   data-toggle="tooltip"
                                                   title="Güncelle">
                                                    Güncelle
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">
                                            <span class="badge badge-sm bg-gradient-danger">
                                                Kategori Bulunamadı
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="ms-3 mt-3">
                            <a href="/Admin/Product/CreateProduct" class="btn bg-gradient-dark mb-0">
                                Yeni Kategori Ekle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
