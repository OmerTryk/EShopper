@using E_Shopper.Catalog.Dtos.OfferDtos
@model CreateOfferDto
@{
	ViewData["Title"] = "CreateOffer";
	ViewData["NavbarTitle"] = "Teklif Ekle";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<div class="col-12">
		<div class="card mb-4">
			<div class="card-header pb-0">
				<h6>Yeni Offer Ekle</h6>
			</div>
			<div class="card-body px-4 pt-4 pb-2">
				<form method="post">
					<div class="mb-3">
						<label class="form-label">Başlık</label>
						<input type="text" class="form-control" asp-for="Title" placeholder="Teklif başlığı giriniz" required />
					</div>
					<div class="mb-3">
						<label class="form-label">Alt Başlık</label>
						<input type="text" class="form-control" asp-for="SubTitle" placeholder="Teklif alt başlığı giriniz" required />
					</div>
					<div class="mb-3">
						<label class="form-label">Link</label>
						<input type="text" class="form-control" asp-for="ImageUrl" placeholder="Teklif resim linki giriniz" required />
					</div>
					<button type="submit" class="btn bg-gradient-dark mb-0">Ekle</button>
				</form>
			</div>
		</div>
	</div>
</div>

